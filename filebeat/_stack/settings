#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="vcw/elastic/filebeat"
export VCW_STACK_GLOBAL_STACKNAMES="filebeat"
export VCW_STACK_GLOBAL_BOOTSTACKS=""
export VCW_STACK_GLOBAL_RUNSTACKS="_filebeat"
export VCW_STACK_GLOBAL_VOLUME_LIST="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_config,\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_entrypoint,\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_volume,\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_ingest_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_config:/vcw/pwd, \
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_entrypoint:/vcw/bin, \
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_ingest_volume:/vcw/ingest"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_FILEBEAT_ENVIRONMENT,\
$VCW_STACK_FILEBEAT_COMMAND,\
$VCW_STACK_FILEBEAT_PORTS,\
$VCW_STACK_FILEBEAT_VOLUMES,\
$VCW_STACK_FILEBEAT_NETWORKS,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="filebeat"
export VCW_STACK_GLOBAL_IMAGE_NAME="docker.elastic.co/beats/filebeat"
export VCW_STACK_FILEBEAT_COMMAND="/vcw/bin/docker-entrypoint"
export VCW_STACK_FILEBEAT_ENVIRONMENT="\
'ES_FILEBEAT_FILEPATHS=${DOLLAR}{VCW_STACK_FILEBEAT_ENVIRONMENT_FILEPATHS}',\
'ES_FILEBEAT_LOGGING_LEVEL=${DOLLAR}{VCW_STACK_FILEBEAT_ENVIRONMENT_LOGGING_LEVEL}'"
export VCW_STACK_FILEBEAT_VOLUMES="\
'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_config:/vcw/pwd',\
'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_entrypoint:/vcw/bin',\
'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_volume:/usr/share/filebeat/data',\
'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_ingest_volume:/vcw/ingest',\
'/etc:/hostfs/etc:ro'\
${DOLLAR}{VCW_STACK_FILEBEAT_ENVIRONMENT_FILEPATHS_MAPPING}"
export VCW_STACK_FILEBEAT_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_GLOBAL_VOLUMES="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_config: { external: true },\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_entrypoint: { external: true },\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_volume: { external: true },\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_ingest_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS filebeat.base
export VCW_STACK_FILEBEAT_ENVIRONMENT_FILEPATHS="${CONFIGURATION_MODULE_FILEBEAT_FILEPATHS}"
export VCW_STACK_FILEBEAT_ENVIRONMENT_FILEPATHS_MAPPING="${CONFIGURATION_MODULE_FILEBEAT_FILEPATHS_MAPPING}"
export VCW_STACK_FILEBEAT_ENVIRONMENT_LOGGING_LEVEL="${CONFIGURATION_MODULE_FILEBEAT_LOGGING_LEVEL}"
export VCW_STACK_FILEBEAT_DEPLOY_MODE="${CONFIGURATION_MODULE_FILEBEAT_DEPLOY_MODE}"
export VCW_STACK_FILEBEAT_DEPLOY_RESOURCES_LIMITS_MEMORY="${CONFIGURATION_MODULE_FILEBEAT_MEMORY_LIMIT}"
export VCW_STACK_FILEBEAT_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="${CONFIGURATION_MODULE_FILEBEAT_MEMORY_RESERVED}"
# END SETTINGS filebeat.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
