#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="hkvb/elastic/apm/traefik"
export VCW_STACK_GLOBAL_STACKNAMES="apm"
export VCW_STACK_GLOBAL_BOOTSTACKS="apm"
export VCW_STACK_GLOBAL_RUNSTACKS=""
export VCW_STACK_GLOBAL_VOLUME_LIST=""
export VCW_STACK_GLOBAL_VOLUME_INITIALISED=""
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_APM_ENVIRONMENT,\
$VCW_STACK_APM_COMMAND,\
$VCW_STACK_APM_PORTS,\
$VCW_STACK_APM_VOLUMES,\
$VCW_STACK_APM_NETWORKS,\
$VCW_STACK_APM_DEPLOY_MODE,\
$VCW_STACK_APM_COMPOSE_EXTENSIONS,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="apm"
export VCW_STACK_GLOBAL_IMAGE_NAME="docker.elastic.co/apm/apm-server"
export VCW_STACK_APM_ENVIRONMENT="\
'ELASTICSEARCH_HOSTS=http://elasticsearch:9200'"
export VCW_STACK_APM_COMMAND=
export VCW_STACK_APM_PORTS=
export VCW_STACK_APM_VOLUMES=
export VCW_STACK_APM_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay, ${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_APM_DEPLOY_MODE="replicated"
export VCW_STACK_APM_COMPOSE_EXTENSIONS="
      labels: [traefik.enable=true,traefik.docker.network=${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay,
      \"traefik.http.middlewares.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_apm.stripprefix.prefixes=/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX},/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX}/\",
      traefik.http.services.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_apm.loadbalancer.server.port=8200,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_apm.middlewares=${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_apm@docker,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_apm.entrypoints=infometis,
      traefik.http.routers.${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_apm.rule=PathPrefix(\"/${DOLLAR}{VCW_STACK_GLOBAL_URLPREFIX}\") ]
${DOLLAR}{VCW_STACK_APM_COMPOSE_EXTENSIONS}"
export VCW_STACK_GLOBAL_VOLUMES=
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKGLOBAL}_overlay: { external: true }, ${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS apm
export VCW_STACK_APM_DEPLOY_RESOURCES_LIMITS_MEMORY="${CONFIGURATION_MODULE_APM_MEMORY_LIMIT}"
export VCW_STACK_APM_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="${CONFIGURATION_MODULE_APM_MEMORY_RESERVED}"
# END SETTINGS apm

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
