#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="hkvb/elastic/journalbeat"
export VCW_STACK_GLOBAL_STACKNAMES="journalbeat"
export VCW_STACK_GLOBAL_BOOTSTACKS=""
export VCW_STACK_GLOBAL_RUNSTACKS="journalbeat"
export VCW_STACK_GLOBAL_VOLUME_LIST="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_config,\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_entrypoint,\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_config:/vcw/pwd, \
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_entrypoint:/vcw/bin"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_JOURNALBEAT_ENVIRONMENT,\
$VCW_STACK_JOURNALBEAT_COMMAND,\
$VCW_STACK_JOURNALBEAT_PORTS,\
$VCW_STACK_JOURNALBEAT_VOLUMES,\
$VCW_STACK_JOURNALBEAT_NETWORKS,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="journalbeat"
export VCW_STACK_GLOBAL_IMAGE_NAME="docker.elastic.co/beats/journalbeat"
export VCW_STACK_JOURNALBEAT_COMMAND="/vcw/bin/docker-entrypoint"
export VCW_STACK_JOURNALBEAT_ENVIRONMENT="\
'ES_JOURNALBEAT_LOGGING_LEVEL=${DOLLAR}{VCW_STACK_JOURNALBEAT_ENVIRONMENT_LOGGING_LEVEL}'"
export VCW_STACK_JOURNALBEAT_VOLUMES="\
'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_config:/vcw/pwd',\
'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_entrypoint:/vcw/bin',\
'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_volume:/usr/share/journalbeat/data',\
'/etc:/hostfs/etc:ro','${DOLLAR}{VCW_STACK_JOURNALBEAT_VOLUMES_HOST_JOURNALPATH}:/hostfs/var/log/journal:ro'"
export VCW_STACK_JOURNALBEAT_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_GLOBAL_VOLUMES="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_config: { external: true },\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_entrypoint: { external: true },\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS journalbeat.base
export VCW_STACK_JOURNALBEAT_VOLUMES_HOST_JOURNALPATH="${CONFIGURATION_MODULE_JOURNALBEAT_HOST_JOURNALPATH}"
export VCW_STACK_JOURNALBEAT_MODULE_JOURNALBEAT_LOGGING_LEVEL="${CONFIGURATION_MODULE_JOURNALBEAT_LOGGING_LEVEL}"
export VCW_STACK_JOURNALBEAT_DEPLOY_MODE="${CONFIGURATION_MODULE_JOURNALBEAT_DEPLOY_MODE}"
export VCW_STACK_JOURNALBEAT_DEPLOY_RESOURCES_LIMITS_MEMORY="${CONFIGURATION_MODULE_JOURNALBEAT_MEMORY_LIMIT}"
export VCW_STACK_JOURNALBEAT_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="${CONFIGURATION_MODULE_JOURNALBEAT_MEMORY_RESERVED}"
# END SETTINGS journalbeat.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
